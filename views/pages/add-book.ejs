<div class="form-container">
  <form action="/add-book" method="POST" class="form">
    <label for="title" class="form__input-label">Title</label>
    <input name="title" class="form__input" required>

    <label for="description" class="form__input-label">Description</label>
    <textarea name="description" class="form__input" rows="5" required></textarea>

    <button class="add-book" type="submit">Add</button>
  </form>
</div>